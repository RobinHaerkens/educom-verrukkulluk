{% extends "main.html.twig" %}

{% block header %}
	<div class="carousel-inner">
		<img class="d-block w-100 receptimage" alt="Carousel Bootstrap Second" src="https://keukenhulpjes.be/wp-content/uploads/2020/07/Mooi-gedekte-tafel.jpg" height=400px />
		<div class="carousel-caption" >
        <a class="link" href="http://localhost/educom-verrukkulluk/index.php">
            <img class="logo" src="assets/img/logo-v2.png"/>
        </a>
		</div>
	</div> 
{% endblock %}
{% block main %}
            <div class="row">
				<div class="col-md-4">
					<div class="row">
						<div class="col-md-12 login">
							<h3>
                            <h3 class="text-warning"> Login </h3>
							<p> email</p>
        					<textarea name="email" rows="1" cols="30"></textarea>
							<p> password </p>
							<textarea name="password" rows="1" cols="30"></textarea>
							</h3><br><br>
							<button type="button" class="btn btn-warning">
							<h3>Login</h3>
							</button>  
						</div>
					</div>
					<div class="row">
						<div class="col-md-12 agenda">
                            <h2 class = "text-warning">Agenda</h2>
                            <i class="fa fa-calendar"></i> FontAwesome <br>
                            <i class="fa fa-calendar"></i><a class="link" href="https://fontawesome.com/icons?d=gallery&m=free"> Documentation</a><br>
                            <i class="fa fa-calendar"></i> Event 1 <br>
                            <i class="fa fa-calendar"></i> Event 2 <br>
                            <i class="fa fa-file-pdf"></i><a class="link" href="https://www.layoutit.com/build"> Layout-it</a>
						</div>
					</div>
				</div>
				<div class="col-md-8">
					<div class="row">           
                            <h1 class="text-warning">Boodschappenlijst</h1>
                        <div class="row">
                            <div class="col-md-1">
                            
                                {% for record in data.ingredient_namen %}
                                <div class="lijstrow">
                                    <ul><img class="ingredient_image" src="{{record.foto}}"></ul>
                                </div>    
                                {% endfor %}
                            </div>
                            <div class="col-md-3">
                            
                            
                                {% for record in data.ingredient_namen %}
                                <div class="lijstrow">
                                <ul><h5>{{record.naam}}</h5></ul>
                                <ul>{{record.beschrijving}}</ul>
                                </div>
                                {% endfor %}
                            </div>

                            <div class="col-md-3">
                            <h3 class="text-warning">Hoeveelheid</h3>
                                {% for record in data.hoeveelheid_boodschappen %}
                                <div class="lijstrow">
                                    <ul>{{record}}</ul>
                                </div>    
                                {% endfor %}
                            </div>
                            <div class="col-md-2">
                            <h3 class="text-warning">Prijs</h3>
                                {% for record in data.ingredient_namen %}
                                <div class="lijstrow">
                                    <ul>€ {{record.prijs/100}}</ul>
                                </div>    
                                {% endfor %}
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-7">
                            <h1 class="text-danger">Totaal Bedrag</h1>
                            </div>
                            <div class="col-md-5">
                                {% set totalPrice = 0 %}
                                {% for record in data.ingredient_namen %}
                                {% set totalPrice = totalPrice + (record.prijs) %}
                                {% endfor %}
                                <h1 class="text-danger">€ {{totalPrice/100}}</h1>
                            </div>
                        </div>
                        <pre>
                        {{dump(data)}}
					</div>                      
				</div>
			</div>
{% endblock %}

{% block footer %}
<div class="row">
    <div class="col-md-6">
		<h3>
			Contact
		</h3>
		<p> Tel: 046-1234567<br>
		Email: Verrukkulluk@info.nl<br>
		Adres: Poststraat 2b<br>
		Sittard<br>
		Verrukkulluk.nl</p>
    </div>

    <div class="col-md-6">
            <img class="logo" src="assets/img/logo-v2.png"/>
	</div>
</div>
{% endblock %}