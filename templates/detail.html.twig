{% extends "main.html.twig" %}



{% block header %}
 
	<div class="carousel-inner">
		<img class="d-block w-100 receptimage" alt="Carousel Bootstrap Second" src="{{data.recept.foto}}" height=400px />
		<div class="carousel-caption" position="left">
		</div>

	</div> 
	<div><h1>{{data.recept.titel}}</h1></div>
	<div>{{data.keuken.omschrijving}}</div>
	<div>{{data.type.omschrijving}}</div>
	<div>{{data.totaalcalorien}} Kcal</div>
	<div>Totaal kosten: {{data.prijs}} euro</div>
	<div>Rating {{data.gemRating}}</div>
	<div> {{data.recept.long_desc}}</div>
{#Bereiding#}
<h2 class="text-danger"> Bereiding </h2>
	{% for record in data.bereiding %}
	<ul>
	{{record.nummeriekveld}}<br>
	{{record.textveld}}<br>

	</ul>
	{% endfor %}


{#ingredienten#}
<h2 class="text-danger"> Lijst met Ingrediënten </h2>
	{% for record in data.ingredienten %}
	<li>
	{{record.artikel_data.naam}} {{record.ingredient_data.hoeveelheid}}{{record.ingredient_data.eenheid}}
	</il>
	{% endfor %}
{#opmerkingen ophalen en usernaam#}

<h2 class="text-danger"> Opmerkingen </h2>
	{% for record in data.opmerkingen %}
	<ul>
	{{record.user_info.user_name}}<br>
	<img height=75px width=auto  src="{{record.user_info.foto}}"><br>
	{{record.recept_user_info.textveld}}<br>
	{{record.recept_user_info.datum}}
	</ul>
	{% endfor %}

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="tabbable" id="tabs-359263">
				<ul class="nav nav-tabs">
					<li class="nav-item">
						<a class="nav-link active show" href="#tab1" data-toggle="tab"><h3 class="text-danger"> Ingrediënten</h3></a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#tab2" data-toggle="tab"><h3 class="text-danger"> Bereidingswijze</h3></a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#tab3" data-toggle="tab"><h3 class="text-danger"> Opmerkingen </h3></a>
					</li>
				</ul>
				<div class="tab-content">
					<div class="tab-pane" id="tab1">
						<p>
							{% for record in data.ingredienten %}
							<li>
							{{record.artikel_data.naam}} {{record.ingredient_data.hoeveelheid}}{{record.ingredient_data.eenheid}}
							</il>
							{% endfor %}
						</p>
					</div>
					<div class="tab-pane" id="tab2">
						<p>
								{% for record in data.bereiding %}
